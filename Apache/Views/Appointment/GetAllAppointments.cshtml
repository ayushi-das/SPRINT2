@model IEnumerable<Apache.Models.Appointment>

@{
    ViewBag.Title = "GetAllAppointments";
    Layout = "~/Views/Shared/_AdminView.cshtml";
}

<h2>Appointments</h2>

<p>
    @Html.ActionLink("Create New", "AddAppointment")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.PatientId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PatientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PatientAge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfApp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.PatientId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PatientName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PatientAge)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhoneNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DoctorId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateOfApp)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>
    
</tr>
}

</table>

@Html.ActionLink("Back","Index","Admin")
